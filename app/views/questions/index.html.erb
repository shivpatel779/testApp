<table class="table table-responsive">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Pri</th>
      <th scope="col">Question</th>
      <th scope="col">Teaming Stages</th>
      <th scope="col">Appears (Day)</th>
      <th scope="col">Frequency</th>
      <th scope="col">Type</th>
      <th scope="col">Required?</th>
      <th scope="col">Conditions</th>
      <th scope="col">Mapping</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each_with_index do |question,index| %>
      <div class="table" id="question_<%=question.id %>">
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%=question.pri%></td>
          <td><%=question.question%></td>
          <td><%=question.teaming_stages%></td>
          <td><%=question.appears_day%></td>
          <td><%=question.frequency%></td>
          <td><%=question.question_type%></td>
          <td><%=question.required?  %></td>
          <td><%=question.conditions %></td>
          <td><%=question.mapping.name %></td>

          <td><%= link_to 'Edit', edit_question_path(question), remote: true %>
              <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </div>
      </tr>
    <% end %>
      <%= render "new_form" %>
  </tbody>
</table>
<%= will_paginate @questions %>

